            <li>⎋</li>
            <li>⌥</li>
            <li>●</li>
            <li>○</li>
            <li>◻︎</li>
            <li>◼︎</li>
            <li>◆</li>
            <li>◇</li>
            <li>★</li>
            <li>☆</li>
        </ul>
    </div>

    <% include foot%>
